{
  "manifest_version": 3,
  "name": "Controle de volume do YouTube",
  "description": "Permite controlar o volume do YouTube usando a roda de rolagem do mouse",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
