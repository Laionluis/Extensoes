{
  "manifest_version": 3,
  "name": "YouTube Extension",
  "description": "Permite controlar o volume do YouTube usando a roda de rolagem do mouse e modo teatro.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "youtube-extension-logo.png"
  },
  "permissions":  [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["http://*/*", "https://*/*"]
  }]
}
